	<title>caluculator</title>
	<script>
		function insert(number){
        document.two.textview.value=document.two.textview.value+  number;
		}


		function equal()
		{
			var exp = document.two.textview.value;
			if(exp)
			{
    document.two.textview.value=eval(exp);
}
}
function backspace(){

	var exp = document.two.textview.value;
	document.two.textview.value=exp.substring(0,exp.length-1);
}	
</script>
